<project>
    <modelVersion>4.0.0</modelVersion>

    <groupId>simple.group</groupId>
    <artifactId>simple.artifact</artifactId>
    <version>2.0.0</version>

    <dependencies>
        <dependency>
            <groupId>simple.group</groupId>
            <artifactId>simple.artifact.dep</artifactId>
            <version>2.0.0</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.revapi</groupId>
                <artifactId>revapi-maven-plugin</artifactId>
                <version>@project.version@</version>
                <dependencies>
                    <dependency>
                        <groupId>org.revapi</groupId>
                        <artifactId>revapi-java</artifactId>
                        <version>@revapi-java.version@</version>
                    </dependency>
                    <dependency>
                        <groupId>my.group</groupId>
                        <artifactId>my.extension</artifactId>
                        <version>1.0.0</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>api-check-with-deps</id>
                        <goals>
                            <goal>check</goal>
                            <goal>report</goal>
                        </goals>
                        <configuration>
                            <analysisConfiguration>
                                <revapi.ignore>
                                    <item>
                                        <code>java.class.nowFinal</code>
                                        <old>class test.dep</old>
                                        <justification>foo</justification>
                                    </item>
                                    <item>
                                        <code>java.field.serialVersionUIDUnchanged</code>
                                        <old>field test.Class.serialVersionUID</old>
                                        <new>field test.Class.serialVersionUID</new>
                                        <justification>foo</justification>
                                    </item>
                                </revapi.ignore>
                            </analysisConfiguration>
                            <analysisConfigurationFiles>
                                <configurationFile>
                                    <path>analysis-config.json</path>
                                    <roots>
                                        <root>nested/config</root>
                                    </roots>
                                </configurationFile>
                                <file>analysis-config2.json</file>
                            </analysisConfigurationFiles>
                            <reportSeverity>nonBreaking</reportSeverity>
                        </configuration>
                    </execution>
                    <execution>
                        <id>api-check-without-deps</id>
                        <configuration>
                            <checkDependencies>false</checkDependencies>
                            <analysisConfiguration>
                                <revapi.java>
                                    <missing-classes>
                                        <behavior>ignore</behavior>
                                    </missing-classes>
                                </revapi.java>
                                <revapi.ignore>
                                    <item>
                                        <code>java.field.serialVersionUIDUnchanged</code>
                                        <old>field test.Class.serialVersionUID</old>
                                        <new>field test.Class.serialVersionUID</new>
                                        <justification>foo</justification>
                                    </item>
                                </revapi.ignore>
                            </analysisConfiguration>
                            <analysisConfigurationFiles>
                                <file>analysis-config2.json</file>
                            </analysisConfigurationFiles>
                        </configuration>
                        <goals><goal>check</goal></goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
